{
    "name": "highlight-cpp-parameters",
    "displayName": "Highlight C/C++ parameters",
    "description": "Highlight parameters for C/C++ languages",
    "version": "0.1.2",
    "publisher": "mblet",
    "engines": {
        "vscode": "^1.0.0"
    },
    "main": "./extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/MickaelBlet/highlight-cpp-parameters.git"
    },
    "activationEvents": [
        "onLanguage:c",
        "onLanguage:cpp"
    ],
    "contributes": {
        "configuration": {
            "title": "Highlight C/C++ parameters",
            "properties": {
                "highlight-cpp-parameters.parameterCss": {
                    "type": "object",
                    "description": "Set css of parameters\nhttps://code.visualstudio.com/api/references/vscode-api#ThemableDecorationRenderOptions",
                    "default": {
                        "color": "#999999",
                        "fontStyle": "italic"
                    }
                },
                "highlight-cpp-parameters.unusedParameterCss": {
                    "type": "object",
                    "description": "Set css of unused parameters\nhttps://code.visualstudio.com/api/references/vscode-api#ThemableDecorationRenderOptions",
                    "default": {
                        "color": "#DD8888",
                        "fontStyle": "italic",
                        "overviewRulerColor": "#DD8888",
                        "overviewRulerLane": 4
                    }
                },
                "highlight-cpp-parameters.timeout": {
                    "type": "integer",
                    "description": "Set timeout after applicate decorations",
                    "default": 100
                }
            }
        }
    },
    "devDependencies": {
        "vscode": "^1.0.0"
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    }
}